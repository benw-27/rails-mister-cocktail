<div class="cocktail-cover">
  <div class="container">
    <h1 class="oswald-font-large pt-5">The menu</h1>
    <div class="sticky col-lg-2 p-0 pb-2">
      <a class="nav-link" href="cocktails"><%= link_to new_cocktail_path, { class: "btn btn-outline-light ml-2 mr-2" } do %>Add a cocktail<% end %></a>
    </div>

    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="card card-background m-3 col-lg-2">
          <img class="card-img-top"
               src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/4-col/img%20(18).jpg"
               alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%= cocktail.name %></h4>
            <p class="card-text">Some quick example text</p>
            <a class="nav-link" href="cocktails"><%= link_to new_cocktail_path, { class: "btn btn-outline-success ml-2 mr-2" } do %>Delete<% end %></a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




